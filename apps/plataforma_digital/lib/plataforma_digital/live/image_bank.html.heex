  <div class="highlights">
    <.text size="h2" color="text-blue-100">Destaques</.text>
  </div>

  <div class="carousel js-flickity"
    data-flickity='{ "imagesLoaded": true, "percentPosition": false, "prevNextButtons": false, "pageDots": false, "wrapAround": true, "autoPlay": 10000 }'>
    <div class="carousel-cell">
      <img src={~p"/images/pescador_por_sol.svg"} />
    </div>
    <div class="carousel-cell">
      <img src={~p"/images/pescador_por_sol.svg"} />
