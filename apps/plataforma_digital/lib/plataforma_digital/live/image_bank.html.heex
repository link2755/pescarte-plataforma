      <img src={~p"/images/landing/pescadores.png"} />
      <img src={~p"/images/landing/pescadores.png"} />
    </div>

    <.button class="image-bank-load-button" style="primary" click="hello">
      <.text size="base" color="text-white-100">Carregar Mais</.text>
    </.button>
  </div>
</main>
